<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="gr.greekbudget.IncomeExpenseController"
            styleClass="orange-background">

    <!-- LEFT FILTER PANEL -->
    <left>
        <VBox spacing="15"
              alignment="TOP_CENTER"
              prefWidth="180"
              styleClass="filter-bar">

            <padding>
                <Insets top="20" left="10" right="10" bottom="20"/>
            </padding>

            <Label text="Φίλτρα"
                   style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

            <Label text="Έτος"
                   style="-fx-font-size: 16px;"/>

            <ComboBox fx:id="yearCombo"
                      prefWidth="140"/>

            <Separator/>

            <Button text="Back"
                    onAction="#goBack"
                    styleClass="btn-orange-small"
                    prefWidth="120"/>

        </VBox>
    </left>

    <!-- CENTER CONTENT -->
    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER">
            <VBox fx:id="contentBox"
                  spacing="25"
                  alignment="TOP_CENTER">

                <padding>
                    <Insets top="30" right="30" bottom="30" left="30"/>
                </padding>

                <Label text="Παρουσίαση Εσόδων – Εξόδων"
                       style="-fx-font-size: 28px; -fx-font-weight: bold;"/>

            </VBox>
        </ScrollPane>
    </center>

</BorderPane>

