<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="gr.greekbudget.MinistryScenariosController"
            styleClass="orange-background">

    <!-- ================= TOP BAR ================= -->
    <top>
        <VBox spacing="10" styleClass="top-orange-section">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <HBox spacing="12" alignment="CENTER_LEFT">
                <Button text="Back"
                        onAction="#goBack"
                        styleClass="btn-orange-small"/>

                <Label text="Σενάρια Υπουργικών Δαπανών"
                       style="-fx-text-fill:white;
                              -fx-font-size:18px;
                              -fx-font-weight:bold"/>

                <Region HBox.hgrow="ALWAYS"/>

                <Label text="Έτος:"
                       style="-fx-text-fill:white;
                              -fx-font-size:14px;"/>

                <ComboBox fx:id="yearBox" prefWidth="120"/>
            </HBox>
        </VBox>
    </top>

    <!-- ================= CENTER ================= -->
    <center>
        <VBox spacing="12">
            <padding>
                <Insets top="14" right="14" bottom="14" left="14"/>
            </padding>

            <!-- INFO BUBBLE -->
            <Label fx:id="infoLabel"
                   text="Επίλεξε υπουργείο για τη χρονολογία που θέλεις και άλλαξε το ποσό του, για να δεις άμεσα την επίδραση στον Κρατικό Προϋπολογισμό."
                   wrapText="true"
                   maxWidth="1200"
                   styleClass="info-bubble"/>

            <!-- TABLES -->
            <HBox spacing="18">

                <!-- LEFT TABLE -->
                <VBox spacing="10" HBox.hgrow="ALWAYS">
                    <Label text="Όλες οι Δαπάνες (ανά Υπουργείο)"
                           style="-fx-text-fill:white;
                                  -fx-font-size:14px;
                                  -fx-font-weight:bold"/>

                    <TableView fx:id="table" prefHeight="520">
                        <columns>
                            <TableColumn fx:id="selectCol"
                                         text=""
                                         prefWidth="55"/>
                            <TableColumn fx:id="nameCol"
                                         text="Υπουργείο"
                                         prefWidth="430"/>
                            <TableColumn fx:id="amountCol"
                                         text="Ποσό"
                                         prefWidth="170"/>
                        </columns>
                    </TableView>
                </VBox>

                <!-- RIGHT TABLE -->
                <VBox spacing="10" prefWidth="520">
                    <Label text="Επιλεγμένα για Σενάριο"
                           style="-fx-text-fill:white;
                                  -fx-font-size:14px;
                                  -fx-font-weight:bold"/>

                    <TableView fx:id="selectedTable"
                               prefHeight="460"
                               editable="true">
                        <columns>
                            <TableColumn fx:id="selYearCol"
                                         text="Έτος"
                                         prefWidth="70"/>
                            <TableColumn fx:id="selNameCol"
                                         text="Υπουργείο"
                                         prefWidth="250"/>
                            <TableColumn fx:id="oldAmountCol"
                                         text="Παλιό Ποσό"
                                         prefWidth="110"/>
                            <TableColumn fx:id="newAmountCol"
                                         text="Νέο Ποσό"
                                         prefWidth="110"/>
                        </columns>
                    </TableView>

                    <Button fx:id="compareBtn"
                            text="ΣΥΓΚΡΙΣΗ"
                            disable="true"
                            onAction="#compare"
                            styleClass="btn-orange"
                            maxWidth="Infinity"/>
                </VBox>

            </HBox>
        </VBox>
    </center>

</BorderPane>
