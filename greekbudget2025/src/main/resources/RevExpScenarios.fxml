<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="gr.greekbudget.RevExpScenariosController"
            styleClass="orange-background">

    <top>
        <VBox spacing="10" styleClass="top-orange-section">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <HBox spacing="12" alignment="CENTER_LEFT">

                <Button text="Back"
                        onAction="#goBack"
                        styleClass="btn-orange-small"/>

                <Label text="Σενάρια Εσόδων – Εξόδων"
                       style="-fx-text-fill:white; -fx-font-size:18px; -fx-font-weight:bold"/>

                <Region HBox.hgrow="ALWAYS"/>

                <Label text="Έτος:" style="-fx-text-fill:white; -fx-font-size:14px;"/>

                <ComboBox fx:id="yearBox" prefWidth="120"/>

            </HBox>
        </VBox>
    </top>

    <center>
        <VBox spacing="12">
            <padding>
                <Insets top="14" right="14" bottom="14" left="14"/>
            </padding>

            <Label text="Επιλέξτε κατηγορία εσόδων ή εξόδων, αλλάξτε το ποσό και δείτε άμεσα την επίδραση στον Κρατικό Προϋπολογισμό."
                   wrapText="true"
                   maxWidth="1200"
                   styleClass="info-bubble"/>

            <HBox spacing="18">

                <VBox spacing="10" HBox.hgrow="ALWAYS">
                    <Label text="Όλες οι Κατηγορίες"
                           style="-fx-text-fill:white; -fx-font-size:14px; -fx-font-weight:bold"/>

                    <TableView fx:id="table" prefHeight="520">
                        <columns>
                            <TableColumn fx:id="selectCol" text="" prefWidth="55"/>
                            <TableColumn fx:id="typeCol" text="Τύπος" prefWidth="90"/>
                            <TableColumn fx:id="nameCol" text="Κατηγορία" prefWidth="330"/>
                            <TableColumn fx:id="amountCol" text="Ποσό" prefWidth="170"/>
                        </columns>
                    </TableView>
                </VBox>

                <VBox spacing="10" prefWidth="520">

                    <Label text="Συμπληρώστε ποσό και πατήστε Enter"
                           alignment="CENTER"
                           maxWidth="Infinity"
                           style="-fx-background-color: white;
                                  -fx-text-fill: black;
                                  -fx-font-size: 14px;
                                  -fx-font-weight: bold;
                                  -fx-padding: 10 14 10 14;
                                  -fx-background-radius: 8;
                                  -fx-border-color: #cccccc;
                                  -fx-border-radius: 8;"/>

                    <Label text="Επιλεγμένα για Σενάριο"
                           style="-fx-text-fill:white; -fx-font-size:15px; -fx-font-weight:bold;"/>

                    <TableView fx:id="selectedTable" prefHeight="460" editable="true">
                        <columns>
                            <TableColumn fx:id="selYearCol" text="Έτος" prefWidth="70"/>
                            <TableColumn fx:id="selTypeCol" text="Τύπος" prefWidth="80"/>
                            <TableColumn fx:id="selNameCol" text="Κατηγορία" prefWidth="220"/>
                            <TableColumn fx:id="oldAmountCol" text="Παλαιό Ποσό" prefWidth="120"/>
                            <TableColumn fx:id="newAmountCol" text="Νέο Ποσό" prefWidth="120"/>
                        </columns>
                    </TableView>

                    <Button fx:id="compareBtn"
                            text="ΣΥΓΚΡΙΣΗ"
                            onAction="#compare"
                            styleClass="btn-orange"
                            maxWidth="Infinity"/>
                </VBox>

            </HBox>
        </VBox>
    </center>

</BorderPane>
