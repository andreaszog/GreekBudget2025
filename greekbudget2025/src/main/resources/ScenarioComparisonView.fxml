<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="gr.greekbudget.ScenarioComparisonController"
            styleClass="orange-background">
    <top>
        <HBox spacing="10"
            alignment="CENTER_LEFT"
            styleClass="top-orange-section">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Button text="Back"
                    onAction="#goBack"
                    styleClass="btn-orange-small"/>

            <Label text="Σύγκριση Σεναρίου"
                style="-fx-text-fill:white;
                        -fx-font-size:18px;
                        -fx-font-weight:bold;"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="14">
            <padding>
                <Insets top="14" right="14" bottom="14" left="14"/>
            </padding>

            <TableView fx:id="table" prefHeight="420">
                <columns>
                    <TableColumn fx:id="yearCol" text="Έτος" prefWidth="70"/>
                    <TableColumn fx:id="ministryCol" text="Υπουργείο" prefWidth="260"/>
                    <TableColumn fx:id="oldCol" text="Παλαιό Ποσό" prefWidth="120"/>
                    <TableColumn fx:id="newCol" text="Νέο Ποσό" prefWidth="120"/>
                    <TableColumn fx:id="deltaCol" text="Μεταβολή (€)" prefWidth="120"/>
                    <TableColumn fx:id="deltaPctCol" text="Μεταβολή (%)" prefWidth="120"/>
                </columns>
            </TableView>

            <VBox fx:id="budgetImpactBox" spacing="8"/>
        </VBox>
    </center>


</BorderPane>
