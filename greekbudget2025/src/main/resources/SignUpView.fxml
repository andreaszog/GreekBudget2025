<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20" styleClass="orange-background"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="gr.greekbudget.SignUpController">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Create Account"
           style="-fx-font-size: 22px; -fx-font-weight: bold;"/>

    <!-- USERNAME -->
    <TextField fx:id="usernameField"
               promptText="Username"
               maxWidth="200"/>

    <!-- PASSWORD -->
    <HBox alignment="CENTER" spacing="5">
        <PasswordField fx:id="passwordField"
                       promptText="Password"
                       maxWidth="200"/>

        <TextField fx:id="passwordVisibleField"
                   promptText="Password"
                   maxWidth="200"
                   visible="false"
                   managed="false"/>

        <Button fx:id="togglePasswordButton"
                text="◎"
                onAction="#togglePassword"
                style="-fx-background-color: transparent;
                       -fx-font-size: 20px;
                       -fx-text-fill: white;
                       -fx-padding: 0;"/>
    </HBox>

    <!-- CONFIRM PASSWORD -->
    <HBox alignment="CENTER" spacing="5">
        <PasswordField fx:id="confirmField"
                       promptText="Confirm Password"
                       maxWidth="200"/>

        <TextField fx:id="confirmVisibleField"
                   promptText="Confirm Password"
                   maxWidth="200"
                   visible="false"
                   managed="false"/>

        <Button fx:id="toggleConfirmButton"
                text="◎"
                onAction="#toggleConfirmPassword"
                style="-fx-background-color: transparent;
                       -fx-font-size: 20px;
                       -fx-text-fill: white;
                       -fx-padding: 0;"/>
    </HBox>

    <Button text="Register"
            onAction="#register"
            maxWidth="120"/>

    <Button text="Back"
            onAction="#goBack"
            maxWidth="120"/>

</VBox>
