<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="gr.greekbudget.SummaryController"
            styleClass="yellow-background">

    <top>
        <VBox>
            <HBox alignment="CENTER_RIGHT" spacing="10" styleClass="orange-background">
                <padding><Insets top="10" right="10" bottom="0" left="10"/></padding>
                <Button text="Back" onAction="#goBack" styleClass="btn-orange-small"/>
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="10" styleClass="orange-background">
                <padding><Insets top="5" right="15" bottom="15" left="15"/></padding>

                <Label text="Έτος:" style="-fx-text-fill: white; -fx-font-size: 16px;"/>
                <ComboBox fx:id="yearComboBox" prefWidth="150"/>

                <Label text="Υπουργείο :" style="-fx-text-fill: white; -fx-font-size: 16px;"/>
                <ComboBox fx:id="ministryComboBox" prefWidth="250"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" styleClass="yellow-background">
            <VBox fx:id="summaryBox" spacing="10">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>
            </VBox>
        </ScrollPane>
    </center>
    <bottom>
        <HBox alignment="CENTER" style="-fx-padding: 20;">
            <Label fx:id="linkTextLabel" />
            <Hyperlink fx:id="pdfLink" />
        </HBox>
    </bottom>

</BorderPane>
