<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="gr.greekbudget.SummaryController"
            styleClass="orange-background">

    <top>
        <VBox spacing="10">
            <!-- Γραμμή με το κουμπί Back δεξιά -->
            <HBox alignment="CENTER_RIGHT">
                <padding>
                    <Insets top="10" right="15" bottom="0" left="15"/>
                </padding>
                <Button text="Back" onAction="#goBack" styleClass="btn-orange-small"/>
            </HBox>

            <!-- Γραμμή με τα φίλτρα (έτος, υπουργείο, κουμπί φόρτωσης) -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <padding>
                    <Insets top="0" right="15" bottom="15" left="15"/>
                </padding>

                <Label text="Έτος:" style="-fx-text-fill: white; -fx-font-size: 16px;"/>
                <ComboBox fx:id="yearComboBox" prefWidth="150"/>

                <Label text="Υπουργείο:" style="-fx-text-fill: white; -fx-font-size: 16px;"/>
                <ComboBox fx:id="ministryComboBox" prefWidth="250"/>

                <Button text="Φόρτωσε" onAction="#loadSummary" styleClass="btn-orange-small"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true">
            <VBox fx:id="summaryBox" spacing="10">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>
            </VBox>
        </ScrollPane>
    </center>

</BorderPane>
