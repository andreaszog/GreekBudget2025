<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER"
      spacing="30"
      styleClass="orange-background"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="gr.greekbudget.WelcomeController">

    <padding>
        <Insets top="80" bottom="50" left="50" right="50"/>
    </padding>

    <!-- LOGO -->
    <ImageView fitWidth="420"
               preserveRatio="true"
               smooth="true">
        <image>
            <Image url="@/images/blender-logo.png"/>
        </image>
    </ImageView>

    <!-- ACTION BUTTONS -->
    <Button text="Log In"
            prefWidth="400"
            onAction="#onLoginClicked"/>

    <Button text="Sign Up"
            prefWidth="400"
            onAction="#onSignupClicked"/>

</VBox>
