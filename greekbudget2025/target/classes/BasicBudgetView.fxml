<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="gr.greekbudget.BasicBudgetController"
            styleClass="yellow-background">

    <!-- TOP BAR -->
    <top>
        <HBox alignment="CENTER_RIGHT" spacing="10" styleClass="orange-background">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Button text="Back"
                    onAction="#goBack"
                    styleClass="btn-orange-small"/>
        </HBox>
    </top>

    <!-- CENTER -->
    <center>
        <ScrollPane fitToWidth="true">
            <VBox fx:id="contentBox" spacing="25" alignment="TOP_CENTER">
                <padding>
                    <Insets top="30" right="30" bottom="30" left="30"/>
                </padding>

                <Label text="Παρουσίαση Βασικών Εσόδων – Εξόδων"
                       style="-fx-font-size: 30px; -fx-font-weight: bold;"/>
            </VBox>
        </ScrollPane>
    </center>

</BorderPane>
