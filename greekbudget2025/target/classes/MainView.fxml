<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="gr.greekbudget.MainController"
            styleClass="orange-background">

    <top>
        <HBox alignment="CENTER_RIGHT" spacing="10">

            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
             </padding>

            <Label fx:id="usernameLabel"
                  style="-fx-font-size: 14px; -fx-text-fill: white; -fx-font-weight: bold;"
                  HBox.hgrow="ALWAYS"/>

            <Button text="Logout" onAction="#logout" styleClass="btn-orange-small"/>
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20">

            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Button text="Δαπάνες ανά Υπουργείο" onAction="#openSummary" prefWidth="350" styleClass="btn-orange"/>
            <Button text="Επεξεργασία Προϋπολογισμού" prefWidth="300" styleClass="btn-orange"/>
            <Button text="Ανάλυση" prefWidth="300" styleClass="btn-orange"/>
            <Button text="Σενάρια" prefWidth="300" styleClass="btn-orange"/>
            <Button text="Έτη" prefWidth="300" styleClass="btn-orange"/>

        </VBox>
    </center>

</BorderPane>