<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="20" styleClass="orange-background"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="gr.greekbudget.WelcomeController">

    <padding>
        <Insets top="100" bottom="50" left="50" right="50"/>
    </padding>

    <Text text="Blender Budget">
        <font>
            <Font name="System Bold" size="40"/>
        </font>
    </Text>

    <Button text="Log In" prefWidth="200" onAction="#onLoginClicked"/>
    <Button text="Sign Up" prefWidth="200" onAction="#onSignupClicked"/>

</VBox>
